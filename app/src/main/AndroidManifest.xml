<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaisebhi.kaisebhi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".Utility.ApplicationCustom"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.kaisebhi.kaisebhi.ViewPic"
            android:exported="false" />
        <activity
            android:name="com.kaisebhi.kaisebhi.MainActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.kaisebhi.kaisebhi.Extras.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.kaisebhi.kaisebhi.ActivityForFrag"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.kaisebhi.kaisebhi.HomeNavigation.Profile.ProfileUpdate"
            android:exported="false"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.kaisebhi.kaisebhi.AnswersActivity"
            android:exported="false"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.kaisebhi.kaisebhi.HomeNavigation.AddQuestion.Add_Queastion"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.kaisebhi.kaisebhi.Utility.PaymentActivity"
            android:exported="false"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.kaisebhi.kaisebhi.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Design.NoActionBar" />

        <!--Below is Broadcast receiver for razorpay mandatory for lower level of
         Razorpay-->
        <receiver
            android:name="com.razorpay.RzpTokenReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="rzp.device_token.share" />
            </intent-filter>
        </receiver>

        <!--To avoid merger manifest error of exported keyword not specified. -->
        <activity
            android:name="com.razorpay.CheckoutActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@style/CheckoutTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <data
                    android:host="rzp.io"
                    android:scheme="io.rzp" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.razorpay.Apikey"
            android:value="rzp_live_a2XOrcelzZlkvx" />
    </application>

</manifest>